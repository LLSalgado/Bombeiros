<?php

$host = "localhost";
$db   = "bombeiros";
$user = "root";
$pass = "";

$conexao = mysql_pconnect($host, $user, $pass) or trigger_error(mysql_error(),E_USER_ERROR); 

mysql_select_db($db, $conexao);

    $query = sprintf("SELECT * FROM funcionarios");

$dados = mysql_query($query, $conexao) or die(mysql_error());

$linha = mysql_fetch_assoc($dados);

$total = mysql_num_rows($dados);

$queryCompl = sprintf("SELECT * FROM complemento");

$dadosCompl = mysql_query($queryCompl, $conexao) or die(mysql_error());

$linhaCompl = mysql_fetch_assoc($dadosCompl);

$totalCompl = mysql_num_rows($dadosCompl);

$queryNat = sprintf("SELECT * FROM natureza");

$dadosNat = mysql_query($queryNat, $conexao) or die(mysql_error());

$linhaNat = mysql_fetch_assoc($dadosNat);

$totalNat = mysql_num_rows($dadosNat);

$queryVia = sprintf("SELECT * FROM viatura");

$dadosVia = mysql_query($queryVia, $conexao) or die(mysql_error());

$linhaVia = mysql_fetch_assoc($dadosVia);

$totalVia = mysql_num_rows($dadosVia);

